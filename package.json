{
  "name": "db-departure-board",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "esbuild src/main.ts --bundle --platform=browser --format=esm --target=es2020 --outfile=dist/bundle.js --sourcemap --define:process.env.NODE_ENV='\"development\"' --define:global=globalThis",
    "build:prod": "esbuild src/main.ts --bundle --platform=browser --format=esm --target=es2020 --outfile=dist/bundle.min.js --minify --define:process.env.NODE_ENV='\"production\"' --define:global=globalThis",
    "build:watch": "esbuild src/main.ts --bundle --platform=browser --format=esm --target=es2020 --outfile=dist/bundle.js --sourcemap --watch --define:process.env.NODE_ENV='\"development\"' --define:global=globalThis",
    "build:tsc": "tsc",
    "dev": "npm run build:watch",
    "start": "npm run build && npm run serve",
    "serve": "http-server . -p 8080 -o",
    "serve:prod": "npm run build:prod && npm run serve",
    "clean": "rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inevs/db-departure-board.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/inevs/db-departure-board/issues"
  },
  "homepage": "https://github.com/inevs/db-departure-board#readme",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.10",
    "esbuild": "^0.25.5",
    "http-server": "^14.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
